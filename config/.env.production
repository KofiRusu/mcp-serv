# ChatOS v2.0 - Production Environment Configuration
# =============================================================================

# Application Mode
NODE_ENV=production
CHATOS_ENV=production
DEBUG=false

# API Configuration (empty = same origin via Caddy)
NEXT_PUBLIC_API_URL=
NEXT_PUBLIC_WS_URL=

# Backend Settings (localhost only - Caddy handles public access)
HOST=127.0.0.1
PORT=8000
WORKERS=4
RELOAD=false

# Data Directories
DATA_DIR=/home/kr/ChatOS-v2.0/data
REALTIME_DATA_DIR=/home/kr/ChatOS-v2.0/sandbox-ui/data
LOG_DIR=/home/kr/ChatOS-v2.0/logs
MODEL_DIR=/home/kr/ChatOS-v2.0/models

# Ollama Configuration
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=persrm-trading-v4

# Database
DATABASE_URL=sqlite:///./data/chatos.db

# Logging
LOG_LEVEL=INFO

# CORS (restrict to local access via Caddy)
