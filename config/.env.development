CHATOS_ENV=development
DEBUG=true

# API Configuration (localhost for development)
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000/api/v1/realtime/ws

# Backend Settings (localhost only - Caddy handles public access)
HOST=127.0.0.1
PORT=8000
WORKERS=1
